<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.vvg.calculator.Megabajti"
    android:background="@drawable/zelena"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <TextView
            android:id="@+id/textViewNaslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="35dp"
            android:layout_centerHorizontal="true"
            android:text="Unesi zetabajte" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp">

        <TextView
            android:id="@+id/textViewZb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextZb"
            android:layout_alignBottom="@+id/editTextZb"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/editTextZb"
            android:layout_weight="1"
            android:text="ZB" />

        <EditText
            android:id="@+id/editTextZb"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:ems="10"
            android:inputType="number"/>

        <Button
            android:id="@+id/buttonKb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/editTextZb"
            android:layout_marginEnd="30dp"
            android:onClick="izracunaj2"
            android:text="Magic" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_row="0">

            <EditText
                android:id="@+id/editTextMb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/textViewMb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextMb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="MB" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_row="0">

            <EditText
                android:id="@+id/editTextGb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/textViewGb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextGb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="GB" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_row="1">

            <EditText
                android:id="@+id/editTextTb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/textViewTb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextTb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="TB" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_row="1">

            <EditText
                android:id="@+id/editTextPb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/textViewPb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextPb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="PB" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="2">

            <EditText
                android:id="@+id/editTextEb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/textViewEb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextEb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="EB" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="2">

            <EditText
                android:id="@+id/editTextKb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/textViewKb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextKb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="KB" />
        </RelativeLayout>





    </GridLayout>



</LinearLayout>
